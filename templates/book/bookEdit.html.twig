<div style="display: flex; flex-direction: column; align-items: center; height: 100vh;">
    <h1>Update Book</h1>

    {{ form_start(form) }}

    {{ form_row(form.ref) }}<br>
    {{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Title'}}) }}<br>
    {{ form_row(form.category) }}<br>
    {{ form_row(form.published) }}<br>
    {{ form_row(form.publicationDate) }}<br>
    {{ form_row(form.author) }}<br>


    <button type="submit" class="btn btn-primary" aligne="centre">Save</button>

    {{ form_end(form) }}
    <a href="{{ path('list_books') }}">Back to list</a>
</div>
